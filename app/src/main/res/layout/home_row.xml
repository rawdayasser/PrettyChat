<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="24dp"
        tools:srcCompat="@tools:sample/avatars"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageView"
        android:layout_marginHorizontal="20dp"
        android:background="#534d4d"></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_ll"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_text_view"
            android:text="No Name"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:id="@+id/date_text_view"
            android:text="4/3/2019"
            android:textSize="15sp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postContent"
        android:layout_below="@id/imageView"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Hello everyone!!"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/postContent"
        android:padding="14dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/interaction_ll">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_button"
            android:src="@drawable/like_24dp"
            />
          <Button
              android:layout_width="200dp"
              android:layout_height="40dp"
              android:text="comment"
              android:id="@+id/comment_button"
              />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_button"
            android:text="Share"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#534d4d"
        android:layout_marginHorizontal="12dp"
        android:layout_below="@id/interaction_ll"
        />
</RelativeLayout>
