<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageButton
        android:id="@+id/edit_desc_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_view"
        android:layout_alignEnd="@+id/change_date_imageButton"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/edit_black_24dp" />

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_photo_imageButton"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-32dp"
        android:layout_marginTop="146dp"
        android:layout_toRightOf="@id/profile_image_view"
        android:src="@drawable/ic_add_circle_outline_black_24dp" />

    <LinearLayout
        android:id="@+id/name_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/profile_image_view"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_ll"
            android:text="No Name"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me.." />
    </LinearLayout>


    <TextView
        android:id="@+id/date_of_birth_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_view"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="48dp"
        android:text="Date Of Birth" />

    <ImageButton
        android:id="@+id/change_date_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image_view"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="46dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

    <TextView
        android:id="@+id/address_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_of_birth_textView"
        android:layout_alignEnd="@+id/profile_image_view"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="56dp"
        android:text="Address" />

    <EditText
        android:id="@+id/address_editText"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_below="@id/change_date_imageButton"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/address_textView" />

    <TextView
        android:id="@+id/phone_num_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_textView"
        android:layout_marginStart="51dp"
        android:layout_marginTop="31dp"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/phone_num_editText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_textView"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/phone_num_textView" />

    <TextView
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_num_textView"
        android:layout_marginStart="51dp"
        android:layout_marginTop="31dp"
        android:text="Email" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_num_textView"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/email_textView"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_editText"
        android:layout_marginStart="51dp"
        android:layout_marginTop="31dp"
        android:text="Change Password" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_textView"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="-37dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/password_textView"
        android:inputType="textPassword" />


    <ImageButton
        android:id="@+id/editName_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_view"
        android:layout_alignEnd="@+id/change_date_imageButton"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/edit_black_24dp" />

</RelativeLayout>
